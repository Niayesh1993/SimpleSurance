<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/BreedsListFragment">

    <fragment
        android:id="@+id/BreedsListFragment"
        android:name="com.example.simplesuranceapplication.ui.breedlist.BreedsListFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_BreedFragment_to_FavoriteFragment"
            app:destination="@id/BreedImagesListFragment">
            <argument
                android:name="breedTitle"
                app:argType="string"
                android:defaultValue=""/>
        </action>
    </fragment>
    <fragment
        android:id="@+id/BreedImagesListFragment"
        android:name="com.example.simplesuranceapplication.ui.imageslist.BreedImagesListFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_second">

        <action
            android:id="@+id/action_FavoriteFragment_to_BreedFragment"
            app:destination="@id/BreedsListFragment" />
    </fragment>
</navigation>